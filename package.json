{
  "name": "dotbrands",
  "version": "1.0.0",
  "description": "The World Most Iconic Brands In Dot",
  "main": "dist/main.js",
  "scripts": {
    "build": "gulp build",
    "clean": "gulp clean",
    "coverage": "nyc --reporter=lcov --reporter=html --reporter=text-summary npm test",
    "coverage:check": "nyc check-coverage --statements 100 --branches 100 --functions 100 --lines 100",
    "lint:js": "eslint *.js app tests",
    "lint:sass": "sass-lint --config .scss-lint.yml --verbose --no-exit",
    "pretest": "npm run lint:js && npm run lint:sass",
    "start": "gulp serve",
    "test": "mocha tests/**  --compilers js:babel-register"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yairodriguez/dotbrands.git"
  },
  "keywords": [
    "Brands",
    "Dots",
    "ES6",
    "Gulp",
    "Sass"
  ],
  "author": "Yair Rodriguez <@imyairodriguez>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yairodriguez/dotbrands/issues"
  },
  "homepage": "https://github.com/yairodriguez/dotbrands#readme",
  "devDependencies": {
    "babel-core": "^6.18.2",
    "babel-preset-es2015": "^6.18.0",
    "babel-register": "^6.18.0",
    "babelify": "^7.3.0",
    "browser-sync": "^2.17.6",
    "browserify": "^13.1.1",
    "chai": "^3.5.0",
    "del": "^2.2.2",
    "exorcist": "^0.4.0",
    "ghooks": "^1.3.2",
    "gulp": "^3.9.1",
    "gulp-autoprefixer": "^3.1.1",
    "gulp-cache": "^0.4.5",
    "gulp-clean-css": "^2.0.13",
    "gulp-eslint": "^3.0.1",
    "gulp-htmlmin": "^3.0.0",
    "gulp-if": "^2.0.2",
    "gulp-imagemin": "^3.1.1",
    "gulp-load-plugins": "^1.4.0",
    "gulp-notify": "^2.2.0",
    "gulp-plumber": "^1.1.0",
    "gulp-pug": "^3.1.0",
    "gulp-rename": "^1.2.2",
    "gulp-sass": "^2.3.2",
    "gulp-sass-lint": "^1.3.2",
    "gulp-size": "^2.1.0",
    "gulp-sourcemaps": "^2.2.0",
    "gulp-uglify": "^2.0.0",
    "gulp-useref": "^3.1.2",
    "mocha": "^3.1.2",
    "node-sass": "^3.12.4",
    "nyc": "^9.0.1",
    "sass-lint": "^1.10.2",
    "sass-true": "^2.1.3",
    "vinyl-source-stream": "^1.1.0",
    "watchify": "^3.7.0"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm test"
    }
  },
  "nyc": {
    "exclude": [
      "tests/"
    ]
  }
}
